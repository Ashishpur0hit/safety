<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_marginTop="15dp"
    app:cardBackgroundColor="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:id="@+id/div"
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/ProfilePic"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/profileme"/>

            <TextView
                android:id="@+id/UserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/ProfilePic"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:text="Demo Yadav"
                android:textStyle="bold"
                android:layout_marginStart="10dp"
                android:layout_marginTop="8dp"/>


            <TextView
                android:id="@+id/Status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/UserName"
                android:textColor="#0000ff"
                android:textSize="15sp"
                android:text="Not Accepted"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>


        <TextView
            android:id="@+id/caption"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/div"

            android:layout_marginStart="15dp"
            android:text="Alsa Hum Bhi rakhte hai Pehelwaan"
            android:textColor="@color/black"/>


        <TextView
            android:id="@+id/Institute"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/caption"
            android:textStyle="bold"
            android:layout_marginStart="15dp"
            android:layout_marginTop="5dp"
            android:text="Institue Name"
            android:textColor="@color/black"/>

        <ImageView
            android:id="@+id/UploadedImage"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/highway1"
            android:scaleType="centerCrop"
            android:layout_below="@+id/Institute"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/UploadedImage"
            app:cardBackgroundColor="@color/black"
            android:layout_marginTop="5dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/line"
            android:padding="6dp"
            android:gravity="center_horizontal">


            <ImageView
                android:id="@+id/filledlike"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"

                android:visibility="visible"/>



            <ImageView
                android:id="@+id/like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/like"
                android:layout_marginStart="10dp"
                />

            <TextView
                android:id="@+id/by"
                android:layout_toRightOf="@+id/like"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Liked by "/>

            <TextView
                android:id="@+id/comment"
                android:layout_toRightOf="@+id/by"
                android:layout_width="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text=""/>



            <ImageView
                android:id="@+id/share"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:layout_toLeftOf="@+id/text"
                android:src="@drawable/share"/>


            <TextView
                android:id="@+id/text"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"
                android:layout_width="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:text="Share"/>



        </RelativeLayout>






    </RelativeLayout>




</androidx.cardview.widget.CardView>